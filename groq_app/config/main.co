import core
import llm

flow main
    activate check_true_false
    activate reply_to_greeting
    activate handle_unhandled

flow reply_to_greeting
    user_expressed_greeting
    bot say "Hello! What's the weather like at your place?"

flow user_expressed_greeting
    user said "hi" or user said "hello" or user said "howdy"

flow check_true_false
    $input = user said something
    if $input == "true"
        bot say "Yes, it is true!"
    else if $input == "false"
        bot say "No, it is false!"
    else
        continue

flow handle_unhandled
    user said something
    llm continue interaction